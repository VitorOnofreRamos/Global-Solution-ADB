<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SAMEN</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Global_Solution_ADB.styles.css" asp-append-version="true" />
</head>
<body class="custom-body">
    <header>
        @Html.Partial("_NavBar")
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted custom-footer bg-black py-4">
        <div class="container">
            <div class="row">
                <!-- Seção sobre o copyright -->
                <div class="col-md-6">
                    <span>
                        &copy; 2024 - Global_Solution_ADB -
                        <a asp-area="" asp-controller="Home" asp-action="About" class="text-decoration-none">Sobre</a>
                    </span>
                </div>
                <!-- Seção dos integrantes -->
                <div class="col-md-6 text-md-end mt-3 mt-md-0">
                    <p><b>Integrantes:</b></p>
                    <ul class="list-unstyled">
                        <li>Vitor Onofre Ramos - RM553241</li>
                        <li>Pedro Henrique Soares Araujo - RM553801</li>
                        <li>Beatriz Silva - RM552600</li>
                    </ul>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
