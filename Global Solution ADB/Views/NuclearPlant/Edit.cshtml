﻿@using Global_Solution_ADB.Models.Entities
@model Global_Solution_ADB.Application.DTOs.NuclearPlantDTO

@{
    ViewData["Title"] = "Editar dados da Usina";
}

<h2 class="mt-3">@ViewData["Title"]</h2>

<form asp-action="Edit" method="post" asp-route-id="@Model.Id">
    <input type="hidden" name="Id" value="@Model.Id" />

    <div class="form-group">
        <label asp-for="Name">Nome da Usina</label>
        <span class="text-info small">"Nome que identifique a usina".</span>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="FullCapacity">Capacidade Eletrica Total da Usina</label>
        <span class="text-info small">"A capacidade máxima de geração de energia em gigawatts (GW), Ex:(450.05)".</span>
        <input asp-for="FullCapacity" class="form-control" required />
        <span asp-validation-for="FullCapacity" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="NumberOfReactors">Número de Reatores na Usina</label>
        <span class="text-info small">"Quantidade de reatores nucleares em operação na usina".</span>
        <input asp-for="NumberOfReactors" class="form-control" required />
        <span asp-validation-for="NumberOfReactors" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <button type="submit" class="btn btn-primary">Salvar Alterações</button>
    </div>
    <a href="@Url.Action("Index", "NuclearPlant")" class="btn btn-secondary mt-3">Voltar para a Lista</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}