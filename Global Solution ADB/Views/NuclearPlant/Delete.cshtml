@model Global_Solution_ADB.Application.DTOs.NuclearPlantDTO

@{
	ViewData["Title"] = "Confirmar Exclusão da Usina";
}

<h2 class="mt-3">@ViewData["Title"]</h2>

<div class="card mt-3">
    <div class="card-body bg-warning bg-opacity-25">
        <span>
            Tem certeza de que deseja excluir esta consulta? <br />
            <b>Essa ação pode ser permanete.</b>
        </span>
    </div>
</div>


<div class="card mt-3">
    <div class="card-body">
        <h4>Detalhes da Usina</h4>

        <dl class="row">
            <dt class="col-sm-3">ID</dt>
            <dd class="col-sm-9">@Model.Id</dd>

            <dt class="col-sm-3">Nome da Usina</dt>
            <dd class="col-sm-9">@Model.Name</dd>

            <dt class="col-sm-3">Capacidade Total</dt>
            <dd class="col-sm-9">@Model.FullCapacity</dd>

            <dt class="col-sm-3">Numero de Reatores</dt>
            <dd class="col-sm-9">@Model.NumberOfReactors</dd>
        </dl>

        <button id="delete-button" class="btn btn-danger">Excluir</button>
        <a href="@Url.Action("Index", "NuclearPlant")" class="btn btn-secondary">Cancelar</a>
    </div>
</div>

@section Scripts {
    <script>
        // Quando o usuário clicar no botão Excluir
        document.getElementById('delete-button').onclick = function () {
            if (confirm('Tem certeza de que deseja excluir esta usina?')) {
                // Realiza a requisição DELETE usando fetch (AJAX)
                fetch('@Url.Action("DeleteConfirmed", "NuclearPlant", new { id = Model.Id })', {
                    method: 'DELETE',
                    headers: {
                        'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val() // Token de segurança
                    }
                })
                    .then(response => {
                        if (response.ok) {
                            alert('Usina excluida com sucesso');
                            window.location.href = '@Url.Action("Index", "Home")'; // Redireciona para a lista
                        } else {
                            alert('Erro ao excluir a usina');
                        }
                    })
                    .catch(error => alert('Erro na requisição de exclusão: ' + error));
            }
        }
    </script>
}